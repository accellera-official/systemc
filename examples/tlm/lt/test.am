## Generic example setup
## (should be kept in sync among all test.am files)
##
## Note: Recent Automake versions (>1.13) support relative placeholders for
##      included files (%D%,%C%).  To support older versions, use explicit
##       names for now.
##
## Local values:
##   %D%: lt
##   %C%: lt

examples_TESTS += lt/test

lt_test_CPPFLAGS = \
	-I$(srcdir)/lt/include \
	$(CPPFLAGS_TLMTESTS)

lt_test_SOURCES = \
	$(lt_H_FILES) \
	$(lt_CXX_FILES)

examples_BUILD += \
	$(lt_BUILD)

examples_CLEAN += \
	lt/run.log \
	lt/expected_trimmed.log \
	lt/run_trimmed.log \
	lt/diff.log

examples_FILES += \
	$(lt_H_FILES) \
	$(lt_CXX_FILES) \
	$(lt_BUILD) \
	$(lt_EXTRA)

examples_DIRS += \
	lt/$(TLM_EXAMPLE_SUBDIRS)

## example-specific details

lt_H_FILES = \
	lt/include/initiator_top.h \
	lt/include/lt_top.h

lt_CXX_FILES = \
	lt/src/initiator_top.cpp \
	lt/src/lt.cpp \
	lt/src/lt_top.cpp

lt_BUILD = \
	lt/results/expected.log

lt_EXTRA = \
	lt/README \
	lt/CMakeLists.txt \
	lt/build-msvc/Makefile \
	lt/build-msvc/lt.sln \
	lt/build-msvc/lt.vcxproj \
	lt/build-unix/Makefile \
	lt/docs/lt_example.pdf \
	lt/docs/lt_example.ppt

